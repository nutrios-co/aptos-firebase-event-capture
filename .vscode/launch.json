{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug EventCapture Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/functions/node_modules/.bin/jest",
        "--runInBand",
        "-c",
        "${workspaceRoot}/functions/jest.config.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
